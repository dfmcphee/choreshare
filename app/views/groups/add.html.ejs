<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form id="group-form" role="form" action="/groups" method="POST">
      <fieldset>
        <legend>Create a new Group</legend>
        <% if(params.errors) { %>
        <div class="control-group">
          <% for(var err in params.errors) { %>
            <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><%= params.errors[err]; %></li>
          <% } %>
        </div>
        <% } %>
  
        <%- partial('form', {group: {}}) %>
  
        <div class="form-actions">
          <%- contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'}) %>
        </div>
      </fieldset>
    </form>
  </div>
</div>
