<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form id="user-form" role="form" action="<%= userPath(params.id) %>?_method=PUT" method="POST">
      <fieldset>
        <legend>Update this User</legend>
        <% if(params.errors) { %>
        <div class="form-control">
          <% for(var err in params.errors) { %>
            <div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><%= params.errors[err]; %></div>
          <% } %>
        </div>
        <% } %>
        <%= partial('_form', {user: user}); %>
        <div class="form-actions">
          <%- contentTag('input', 'Save', {type: 'submit', class: 'btn btn-primary'}) %>
          <%- contentTag('button', 'Remove', {type: 'submit', formaction: userPath(params.id) + '?_method=DELETE', formmethod: 'POST', class: 'btn btn-danger'}) %>
        </div>
      </fieldset>
    </form>
  </div>
</div>
