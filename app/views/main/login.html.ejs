<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form id="login-form" role="form" action="<%= localPath %>" method="POST">
    <fieldset>
      <legend>Log In</legend>
      <div class="form-group">
        <label for="username" class="control-label">Username</label>
        <div class="controls">
          <%- contentTag('input', params.username, {type:'text', class:'form-control', name:'username'}) %>
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <div class="controls">
          <%- contentTag('input', params.password, {type:'password', class:'form-control', name:'password'}) %>
        </div>
      </div>
      <div class="form-actions well">
        <%- contentTag('input', 'Submit', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-md-3 col-md-offset-3 align-center">
    <a class="btn btn-info btn-lg btn-block" href="<%= geddy.config.fullHostname %><%= twitterPath %>">
      <i class="icon-twitter"></i> Log in with Twitter
    </a>
  </div>
  <div class="col-md-3 align-center">
    <a class="btn btn-primary btn-lg btn-block" href="<%= geddy.config.fullHostname %><%= facebookPath %>">
      <i class="icon-facebook"></i> Log in with Facebook
    </a>
  </div>
</div>
